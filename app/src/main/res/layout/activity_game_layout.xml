<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0020C2">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:text="PLAY"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFD700"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listGuess"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTitle"
        android:layout_toLeftOf="@+id/txtTitle"
        android:layout_toStartOf="@+id/txtTitle"
        android:stackFromBottom="true"
        android:transcriptMode="normal"
        android:touchscreenBlocksFocus="false"
        android:headerDividersEnabled="false"
        android:focusable="false"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="true"
        android:background="#C0C0C0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SCORE"
        android:id="@+id/txtScore"
        android:layout_marginTop="28dp"
        android:layout_alignTop="@+id/listGuess"
        android:layout_toRightOf="@+id/txtTitle"
        android:layout_toEndOf="@+id/txtTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0000"
        android:id="@+id/txtTotal"
        android:layout_below="@+id/txtScore"
        android:layout_alignRight="@+id/txtScore"
        android:layout_alignEnd="@+id/txtScore" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp" />

</RelativeLayout>